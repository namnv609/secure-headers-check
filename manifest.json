{
  "manifest_version": 2,

  "name": "Secure headers check",
  "description": "Secure headers check and log",
  "version": "1.0",
  "icons": {
    "16": "assets/img/ico-16.png",
    "24": "assets/img/ico-24.png",
    "32": "assets/img/ico-32.png",
    "64": "assets/img/ico-64.png",
    "128": "assets/img/ico-128.png"
  },

  "permissions": [
    "webRequest",
    "http://localhost/*"
    // "*://*/*"
  ],

  "browser_action": {
    "default_title": "Secure headers check"
  },

  "background": {
    "scripts": [
      "assets/js/main.js"
    ],
    "persistent": true
  },

  "options_page": "options.html"
}
